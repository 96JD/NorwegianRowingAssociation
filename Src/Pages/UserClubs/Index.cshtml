@page
@model IndexModel

@{
    ViewData["Title"] = "Club List";
    User loggedInUser = SessionUtils.GetLoggedInUser(HttpContext.Session)!;
}

<div class="row">
    <div class="col-md">
        <div class="card card-body table-responsive">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center p-2 mb-4 border-bottom">
                <vc:legend title="Clubs (@Model.AllUserClubs!.Count())" />
                @if (loggedInUser.UserRoleId == UserRoleConstants.Admin)
                {
                    <vc:add-button title="Add New Club" route="/UserClubs/Create" />
                }
			</div>
            <div class="table-responsive small">
                <table class="table">
                    <caption class="visually-hidden">Table</caption>
                    <thead>
                        <th scope="col">Name</th>
                        @if (loggedInUser.UserRoleId == UserRoleConstants.Admin)
                        {
                            <th colspan="2"></th>
                        }
                    </thead>
                    <tbody>
                    @foreach (UserClub club in Model.AllUserClubs!)
                    {
                        <tr>
                            <td>@club.Name</td>
                            @if (loggedInUser.UserRoleId == UserRoleConstants.Admin)
                            {
                            <td class="col-md-1">
                                <vc:edit-button title="Edit User Club" route="/UserClubs/Update" id="@club.Id"/>
                            </td>
                            }
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>