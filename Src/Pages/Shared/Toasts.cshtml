@if (TempData["Success"] is not null)
{
	<div id="toast" class="toast align-items-center position-fixed toast-position" role="alert" aria-live="assertive" aria-atomic="true">
		<div class="d-flex">
			<div class="toast-body">
				<span class="text-success">@TempData["Success"]!.ToString()</span>
			</div>
			<button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close" />
		</div>
	</div>
}

@if (TempData["Error"] is not null)
{
	<div id="toast" class="toast align-items-center position-fixed toast-position" role="alert" aria-live="assertive" aria-atomic="true">
		<div class="d-flex">
			<div class="toast-body">
				<span class="text-danger">@TempData["Error"]!.ToString()</span>
			</div>
			<button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close" />
		</div>
	</div>
}