@model TestFormModel

<div class="row">
    <div class="col-md">
        <div class="card card-body">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center p-2 mb-4 border-bottom">
                <vc:legend title="Test Form" />
            </div>
            <form method="POST">
                <div class="mb-3">
                    <label for="test-name" class="mb-1">Name</label>
                    <input id="test-name" class="form-control" asp-for="@Model.Test!.Name"/>
                    <span class="text-danger" asp-validation-for="@Model.Test!.Name"></span>
                </div>
                <div class="text-center">
                @if (ViewContext.RouteData.Values["id"] is null)
                {
                    <vc:submit-button label="Create" />
                } else
                {
                    <input hidden asp-for="@Model.Test!.Id" />
                    <vc:submit-button label="Update" />
                }
                </div>
            </form>
        </div>
    </div>
</div>