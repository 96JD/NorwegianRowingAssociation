@page
@model IndexModel

@{
    ViewData["Title"] = "Login";
}

<div class="p-4 border rounded-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center p-2 mb-4 border-bottom">
        <vc:legend title="Login Form" />
    </div>
    <form method="POST">
        <div class="mb-3">
            <label for="email" class="mb-1" >Email<span class="text-danger">*</span></label>
            <input type="email" id="email" class="form-control" autocomplete="username" autofocus asp-for="@Model.UserLogin!.Email"/>
            <span class="text-danger" asp-validation-for="@Model.UserLogin!.Email"></span>
        </div>
        <div class="mb-3">
            <label for="password" class="mb-1">Password<span class="text-danger">*</span></label>
            <input type="password" id="password" class="form-control" autocomplete="on" asp-for="@Model.UserLogin!.Password"/>
            <span class="text-danger" asp-validation-for="@Model.UserLogin!.Password"></span>
        </div>
        <div class="text-center">
            <vc:submit-button label="Login" />
        </div>
    </form>
    <environment names="Production">
        <form method="POST" asp-page-handler="testUser">
    		<hr class="my-3" />
            <div class="text-center">
                <vc:submit-button label="Login as Test User" />
            </div>
        </form>
    </environment>
</div>
